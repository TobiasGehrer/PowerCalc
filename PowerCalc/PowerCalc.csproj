<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.OpenApi" Version="9.0.9" />
    <PackageReference Include="Swashbuckle.AspNetCore" Version="9.0.6" />
  </ItemGroup>

  <Target Name="BuildReactApp" BeforeTargets="Build">
    <Exec WorkingDirectory="$(MSBuildProjectDirectory)/../powercalc-client" Command="npm install" />
    <Exec WorkingDirectory="$(MSBuildProjectDirectory)/../powercalc-client" Command="npm run build" />
  </Target>

</Project>
